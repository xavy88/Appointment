@model MedicalAppointmentSystem.Models.ViewModels.LoginViewModel

<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="~/images/bg/Login.jpg" class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <form id="account" method="post" asp-action="Login" asp-controller="Account">
           <div asp-validation-summary="All" class="text-danger"></div>
          <!-- Email input -->
          <div class="form-outline mb-4">
            <input asp-for="Email" type="email" id="form1Example13" class="form-control form-control-lg" autofocus() />
            <label class="form-label" asp-for="Email" for="form1Example13">Email address</label>
            <span asp-validation-for="Email" class="text-danger"></span>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <input asp-for="Password" type="password" id="form1Example23" class="form-control form-control-lg" />
            <label asp-for="Password" class="form-label" for="form1Example23">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
          </div>

          <div class="d-flex justify-content-around align-items-center mb-4">
            <!-- Checkbox -->
            <div class="form-check">
              <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="form1Example3" />
              <label asp-for="RememberMe" class="form-check-label" for="form1Example3"> Remember me </label>
            </div>
            <a class="text-info" asp-action="Register">Sign Up</a>
          </div>

          <!-- Submit button -->
          <button type="submit" value="Log in" class="btn btn-primary btn-lg btn-block">Sign in</button>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p><!--<a class="btn btn-secondary btn-block" asp-action="Register">Sign Up</a>-->
          </div>

          <a class="btn btn-primary btn-lg btn-block" style="background-color: #3b5998" href="#!"
            role="button">
            <i class="fab fa-facebook-f me-2"></i> Continue with Facebook
          </a>
          <a class="btn btn-primary btn-lg btn-block" style="background-color: #55acee" href="#!"
            role="button">
            <i class="fab fa-twitter me-2"></i> Continue with Twitter</a>

        </form>
      </div>
    </div>
  </div>
</section>

@section Scripts{
    <partial name = "_ValidationScriptsPartial" />
}