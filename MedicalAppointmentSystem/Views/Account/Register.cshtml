@model MedicalAppointmentSystem.Models.ViewModels.RegisterViewModel

<section class="vh-100" style="margin-bottom:120px;">
  <div class="container py-5 h-400">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="~/images/bg/Register.jpg" class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <form id="account" method="post" asp-action="Register" asp-controller="Account">
             <!-- Name input -->
          <div class="form-outline mb-4">
            <input asp-for="Name" type="text" id="form1Example13" class="form-control form-control-lg" autofocus() />
            <label class="form-label" asp-for="Name" for="form1Example13">Name</label>
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <input asp-for="Email" type="email" id="form1Example13" class="form-control form-control-lg" />
            <label class="form-label" asp-for="Email" for="form1Example13">Email address</label>
            <span asp-validation-for="Email" class="text-danger"></span>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <input asp-for="Password" type="password" id="form1Example23" class="form-control form-control-lg" />
            <label asp-for="Password" class="form-label" for="form1Example23">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
          </div>

           <!-- Confirm Password input -->
          <div class="form-outline mb-4">
            <input asp-for="ConfirmPassword" type="password" id="form1Example23" class="form-control form-control-lg" />
            <label asp-for="ConfirmPassword" class="form-label" for="form1Example23">Confirm Password</label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
          </div>

          <!-- Role DropDown -->
          <div class="form-outline mb-4">
            <select asp-for="RoleName"  asp-items="@MedicalAppointmentSystem.Utility.Helper.GetRolesForDropDown(User.IsInRole(MedicalAppointmentSystem.Utility.Helper.Admin))" class="form-control form-control-lg"></select>
            <label asp-for="RoleName" class="form-label" for="form1Example23">Role</label>
            <span asp-validation-for="RoleName" class="text-danger"></span>
          </div>

          <!-- Submit button -->
          <button type="submit" value="Register" class="btn btn-primary btn-lg btn-block">Register</button>

        </form>
      </div>
    </div>
  </div>
</section>

@section Scripts{
    <partial name = "_ValidationScriptsPartial" />
}